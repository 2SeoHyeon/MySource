@{
    ViewData["Title"] = "Home Page";
}

<div class="content-wrap">
    <div class="search-wrap">
        <form action="" method="post" class="search-form" id="SearchForm" name="SearchForm">
            <div class="title-wrap">
                <div class="title">
                    타이틀
                </div>
                <div class="search">
                    <span>Search</span>
                    <input type="text" class="form-control search-input" />
                    <button class="btn btn-light search-submit"><i class="fas fa-search"></i></button>
                    <button type="button" class="btn btn-light search-detail"><i class="fas"></i></button>
                    <button type="button" class="btn btn-light search-reset"><i class="fas fa-redo"></i></button>
                </div>
            </div>

            <div class="detail-search-wrap">
                <div class="search-wrap">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="name" class="col-sm-4 col-form-label">이름</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control search-input" name="name" id="name" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="box-wrap">
        
    </div>
</div>